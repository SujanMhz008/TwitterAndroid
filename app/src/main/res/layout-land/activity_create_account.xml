<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.CreateAccountActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imagebtnback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/round_image_button"
            android:foregroundGravity="left"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_keyboard_backspace_black_24dp" />


        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/twitterlogoblue"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create your Account"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_bold"
        android:textSize="30sp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/roboto"
        android:layout_gravity="center"
        android:hint="Name"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:fontFamily="@font/roboto"
        android:layout_gravity="center"
        android:hint="Phone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />
            <TextView
                android:id="@+id/btnPhoneOrEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use email instead"
                android:textColor="#38A1F3"
                android:textSize="20sp"
                android:fontFamily="@font/roboto"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_bold"
                android:background="@drawable/round_buttton"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>