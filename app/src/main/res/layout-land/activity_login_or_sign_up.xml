<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.LoginOrSignUpActivity">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/twitterlogoblue"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:textSize="35sp"
        android:layout_gravity="center"
        android:layout_marginRight="50dp"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_bold"
        android:text="See what's happening in the world right now"
        />
    <Button
        android:id="@+id/btnCreateAcc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/round_buttton"
        android:text="Create Account"
        android:fontFamily="@font/roboto_bold"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have and account already?"
            android:fontFamily="@font/roboto"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/edtBtnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Log in"
            android:fontFamily="@font/roboto"
            android:textColor="#38A1F3"
            android:textSize="20sp"
            />
    </LinearLayout>

</LinearLayout>